{
  "name": "ai-resume-builder",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n FE,BE -c green,blue \"npm:dev --workspace frontend\" \"npm:dev --workspace backend\"",
    "dev:fe": "npm run dev --workspace frontend",
    "dev:be": "npm run dev --workspace backend",
    "build": "npm run build --workspace frontend && npm run build --workspace backend",
    "build:fe": "npm run build --workspace frontend",
    "build:be": "npm run build --workspace backend",
    "start": "npm run start --workspace backend",
    "lint": "npm run lint --workspace frontend && npm run lint --workspace backend",
    "type-check": "npm run type-check --workspace backend"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
